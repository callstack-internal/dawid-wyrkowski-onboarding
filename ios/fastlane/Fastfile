default_platform(:ios)

platform :ios do
  desc "Build & upload to testflight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: ENV['FASTLANE_API_KEY_ID'],
      issuer_id: ENV['FASTLANE_API_ISSUER_ID'],
      key_filepath: "fastlane/AuthKey.p8",
      in_house: false
    )

    sigh(
      app_identifier: "com.dawidcompany.simpleweatherapp",
      adhoc: true,
      api_key: api_key
    )

    gym(scheme: "CkOnboardingApp")

    upload_to_testflight(
      skip_submission: true,
      api_key: api_key
    )
  end
end
